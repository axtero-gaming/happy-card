{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": [ "./src/app/core/*" ],
      "@shared/*": [ "./src/app/shared/*" ],
      "@shared": [ "./src/app/shared/index" ]
    }
  },
  "files": [
    "src/main.ts",
    "src/libs.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
